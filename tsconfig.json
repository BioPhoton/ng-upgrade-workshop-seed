{
  "compilerOptions": {
    "module": "commonjs",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": ["es5", "es6", "dom"],
    "target": "es5",
    "outDir": "dist/ts",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "typings/main.d.ts",
    "typings/main",
    "node_modules",
    "dist"
  ]
}
